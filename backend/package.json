{
    "name": "angular-nest-template-backend",
    "description": "Nest template for further projects that use NestJS as Node.js framework.",
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/adrian-mezei-smart-home/angular-nest-template.git"
    },
    "version": "1.0.0",
    "author": {
        "name": "Adri√°n Mezei",
        "email": "adrian.mezei.dev@gmail.com"
    },
    "private": true,
    "scripts": {
        "start": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "format": "prettier --write .",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "test:all": "npm run lint && npm run format && npm run test && npm run test:e2e"
    },
    "dependencies": {
        "@nestjs/common": "^7.5.4",
        "@nestjs/core": "^7.5.4",
        "@nestjs/passport": "^7.1.3",
        "@nestjs/platform-express": "^7.5.4",
        "dotenv": "^8.2.0",
        "husky": "^4.3.0",
        "passport": "^0.4.1",
        "passport-google-oauth": "^2.0.0",
        "passport-google-oauth20": "^2.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.6.3"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.5.3",
        "@nestjs/schematics": "^7.2.2",
        "@nestjs/testing": "^7.5.4",
        "@types/express": "^4.17.9",
        "@types/jest": "^26.0.15",
        "@types/node": "^14.14.9",
        "@types/passport-google-oauth20": "^2.0.4",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "eslint": "^7.14.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.6.3",
        "prettier": "^2.2.0",
        "supertest": "^6.0.0",
        "ts-jest": "^26.4.3",
        "ts-loader": "^8.0.11",
        "ts-node": "^9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.1.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run test:all"
        }
    }
}
