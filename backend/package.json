{
    "name": "backend",
    "description": "NestJS template for further projects that use NestJS as Node.js backend framework.",
    "version": "1.0.0",
    "author": {
        "name": "Adri√°n Mezei",
        "email": "adrian.mezei.dev@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/adrian-mezei/angular-nest-template.git"
    },
    "private": true,
    "scripts": {
        "start": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "format": "prettier --write .",
        "format:files": "prettier --write",
        "format:check": "prettier --check .",
        "spell": "cspell \"**/*\"",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:e2e": "jest --config ./e2e/jest-e2e.ts",
        "test:all": "npm run spell && npm run lint:check && npm run format:check && npm run test && npm run test:e2e",
        "m": "nest generate module",
        "c": "nest generate --flat controller",
        "s": "nest generate --flat service",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -f ./src/configs/ormconfig.ts",
        "migration:create": "npm run typeorm -- migration:create -n",
        "migration:generate": "npm run typeorm -- migration:generate --pretty -n",
        "postmigration:generate": "npm run format:files src/migrations/*",
        "migration:run": "npm run typeorm -- migration:run",
        "migration:revert": "npm run typeorm -- migration:revert"
    },
    "dependencies": {
        "@nestjs/common": "^7.6.17",
        "@nestjs/config": "^0.6.3",
        "@nestjs/core": "^7.6.17",
        "@nestjs/jwt": "^7.2.0",
        "@nestjs/passport": "^7.1.5",
        "@nestjs/platform-express": "^7.6.17",
        "@nestjs/swagger": "^4.8.0",
        "@nestjs/typeorm": "^7.1.5",
        "bcrypt": "^5.0.1",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "dotenv": "^9.0.2",
        "nest-winston": "^1.5.0",
        "passport": "^0.4.1",
        "passport-google-oauth20": "^2.0.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pg": "^8.6.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^6.6.7",
        "source-map-support": "^0.5.19",
        "swagger-ui-express": "^4.1.6",
        "typeorm": "^0.2.32",
        "uuid": "^8.3.2",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.6.0",
        "@nestjs/schematics": "^7.3.1",
        "@nestjs/testing": "^7.6.17",
        "@types/bcrypt": "^5.0.0",
        "@types/express": "^4.17.11",
        "@types/jest": "^26.0.23",
        "@types/js-yaml": "^4.0.1",
        "@types/node": "^12.20.13",
        "@types/passport-google-oauth20": "^2.0.7",
        "@types/passport-jwt": "^3.0.5",
        "@types/passport-local": "^1.0.33",
        "@types/pg": "^8.6.0",
        "@types/source-map-support": "^0.5.3",
        "@types/supertest": "^2.0.11",
        "@types/swagger-ui-express": "^4.1.2",
        "@typescript-eslint/eslint-plugin": "^4.24.0",
        "@typescript-eslint/parser": "^4.24.0",
        "cspell": "^5.4.1",
        "eslint": "^7.26.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "jest": "^26.6.3",
        "node-mocks-http": "^1.10.1",
        "prettier": "^2.3.0",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.6",
        "ts-loader": "^9.2.1",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.4"
    }
}
