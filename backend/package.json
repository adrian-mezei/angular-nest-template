{
    "name": "backend",
    "description": "Nest template for further projects that use NestJS as Node.js backend framework.",
    "version": "1.0.0",
    "author": {
        "name": "Adri√°n Mezei",
        "email": "adrian.mezei.dev@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/adrian-mezei-smart-home/angular-nest-template.git"
    },
    "private": true,
    "scripts": {
        "start": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "format": "prettier --write .",
        "cspell": "cspell \"**/*\"",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:e2e": "jest --config ./e2e/jest-e2e.json",
        "test:all": "npm run cspell && npm run lint && npm run format && npm run test && npm run test:e2e",
        "m": "nest generate module",
        "s": "nest generate service",
        "c": "nest generate controller"
    },
    "dependencies": {
        "@nestjs/common": "^7.5.1",
        "@nestjs/config": "^0.6.1",
        "@nestjs/core": "^7.5.1",
        "@nestjs/jwt": "^7.2.0",
        "@nestjs/passport": "^7.1.5",
        "@nestjs/platform-express": "^7.5.1",
        "@nestjs/swagger": "^4.7.8",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.12.2",
        "dotenv": "^8.2.0",
        "js-yaml": "^3.14.1",
        "nest-winston": "^1.4.0",
        "passport": "^0.4.1",
        "passport-google-oauth20": "^2.0.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.6.3",
        "source-map-support": "^0.5.19",
        "swagger-ui-express": "^4.1.6",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.5.1",
        "@nestjs/schematics": "^7.1.3",
        "@nestjs/testing": "^7.5.1",
        "@types/express": "^4.17.9",
        "@types/jest": "^26.0.15",
        "@types/js-yaml": "^3.12.5",
        "@types/node": "^14.14.6",
        "@types/passport-google-oauth20": "^2.0.4",
        "@types/passport-jwt": "^3.0.3",
        "@types/passport-local": "^1.0.33",
        "@types/source-map-support": "^0.5.3",
        "@types/supertest": "^2.0.10",
        "@types/swagger-ui-express": "^4.1.2",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^4.6.1",
        "@typescript-eslint/parser": "^4.6.1",
        "cspell": "^5.0.8",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.6.3",
        "prettier": "^2.2.0",
        "supertest": "^6.0.0",
        "ts-jest": "^26.4.3",
        "ts-loader": "^8.0.8",
        "ts-node": "^9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.0.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
